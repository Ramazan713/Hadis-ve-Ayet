<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:scrollbars="vertical"
    android:background="@drawable/basic_corner"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/esmual_husna_order_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/esmual_husna_refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:alpha="0.5"
            android:background="@drawable/baseline_refresh_24"
            android:contentDescription="Refresh"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/esmual_husna_previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Previous"
            android:minHeight="32dp"
            android:minWidth="40dp"
            android:alpha="0.5"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            >
            <TextView
                android:id="@+id/esmual_husna_arabic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الرَّحِيمُ"
                android:layoutDirection="rtl"
                android:textSize="40sp"
                android:textFontWeight="700"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:id="@+id/esmual_husna_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Er-Rahîm"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textFontWeight="500"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/esmual_husna_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:contentDescription="Next"
            android:minHeight="32dp"
            android:minWidth="40dp"
            android:alpha="0.5"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/esmual_husna_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ahirette, sadece müminlere acıyan, merhamet eden."
        android:gravity="center"
        android:textSize="17sp"
        android:scrollbars="vertical"
        />

</LinearLayout>